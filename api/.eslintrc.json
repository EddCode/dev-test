{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-console": "error",
        "@typescript-eslint/no-floating-promises": "off",
        "@typescript-eslint/restrict-plus:operands": "off"
    }
}
